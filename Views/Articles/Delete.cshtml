@model EBookStore.Site.Models.EFModels.Article

@{
    ViewBag.Title = "ArticleDelte";
}

<div style="margin-left:5px;">
    <h2>確認刪除此筆專欄</h2>
</div>

<div>
    <table class="table">
        <tbody>
            <tr>
                <th><div style="width:45px">書名</div></th>
                <td>@Html.DisplayFor(model => model.Book.Name)</td>
            </tr>
            <tr>
                <th><div>作者</div></th>
                <td>@Html.DisplayFor(model => model.Writer.Name)</td>
            </tr>

            <tr>
                <th><div>標題</div></th>
                <td>@Html.DisplayFor(model => model.Title)</td>
            </tr>
            <tr>
                <th>內容</th>
                <td>@Html.DisplayFor(model => model.Content)</td>
            </tr>
            <tr>
                <th>狀態</th>
                <td>
                    @if (Model.Status)
                    {
                        <span>已發布</span>
                    }
                    else
                    {
                        <span>未發布</span>
                    }
                </td>

            </tr>
            <tr>
                <th>內容</th>
                <td>@Html.DisplayFor(model => model.Content)</td>
            </tr>
        </tbody>
    </table>





