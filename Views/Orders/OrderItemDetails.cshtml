@model IEnumerable<EBookStore.Site.Models.Infra.DetailDapperVM>

@{
    ViewBag.Title = "OrderItemDetails";
    var OrderId = ViewBag.OrderId;
    var OrderItem = ViewBag.OrderItem;
}
@section cdn{
    <script src="https://kit.fontawesome.com/fbde3a79d6.js" crossorigin="anonymous"></script>
}

<style>
    .center-table {
        margin: 0 auto;
        width: fit-content;
    }
</style>


<h2></h2>
<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4" id="block1">
        <div class="col-md-12 d-flex px-5 justify-content-end">
            <h2 class="ml-auto"></h2>
            @*@Html.ActionLink("匯出", "DownloadXlsx", null, new { @class = "btn btn-danger btn-lg ml-auto" })*@
            @using (Html.BeginForm("DownloadXlsx", "Orders", FormMethod.Post))
            {
                <button type="submit" class="btn btn-success btn-lg ml-auto fa-regular fa-file-excel justify-content-end position-relative" style="right:-350px">匯出</button>
            }

            @*<button type="button" class="" id="PrintItemXlsx">匯出</button>*@
            <button type="button" class="btn btn-danger btn-lg ml-auto fa-solid fa-print w-10" id="PrintOrder">列印</button>
        </div>
    </div>
</div>
<hr />
<div id="print_parts">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
        <div class="col-md-12 d-flex px-5">
            <h2 class="ml-auto">訂單明細</h2>
            <h2 class="ml-auto"></h2>
        </div>
    </div>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table center-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>*@
            </tr>
        }
    </table>
</div>


<div class="col-md-12 d-flex px-5">
    @Html.ActionLink("返回", "Index",null, new { @class = "fa-solid fa-arrow-rotate-left fa-xl" })
    @*<input type="submit" value="出貨" class="btn btn-primary btn-lg ml-auto" />*@
    @*<button type="button" class="btn btn-danger btn-lg" id="CancelOrder">取消訂單</button>*@
    <div class="ml-auto"></div>
</div>

@section scripts{
    <script>
        /*        <link rel="stylesheet" href="Print.css" />*/
        document.getElementById("PrintOrder").addEventListener("click", function () {
            const printContent = $('#print_parts').html();
            const original = document.body.innerHTML;

            document.body.innerHTML = printContent;
            window.print();
            document.body.innerHTML = original;
        });
    </script>
}