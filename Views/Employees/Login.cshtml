@model EBookStore.Site.Models.ViewModels.LoginVM

@{
    Layout = null;
    ViewBag.Title = "登入系統";
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
   

    <style>
		body {
			/* background: linear-gradient(to bottom, #ffff00, #ffffff);
            background: linear-gradient(to bottom, #ffff00, #0069d9);*/
			/*background: linear-gradient(135deg, #ffff00, #0069d9);*/
			background-image: url('../../img/bglogin.png');
		}
		.login-container {
			max-width: 400px;
			margin: 0 auto;
			margin-top: 250px;
			padding: 20px;
			border: 8px double gray /*rgb(253,211,0)*/;
			border-radius: 4px;
			background-color: #fff;
			box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
		}

        .login-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .mb-3 label {
            font-weight: bold;
        }

        .form-control {
            height: 40px;
        }

		.btn-primary {
            margin-top:20px;
			background-color: rgb(253,211,0);
			border-color: rgb(253,211,0);
			width: 100%;
			height: 40px;
			font-size: 16px;
			font-weight: bold;
		}

		.btn-primary:hover,
		.btn-primary:focus {
			background-color: goldenrod;
			border-color: goldenrod;
		}

       /* .btn-primary:hover {
            background-color: #0069d9;
        }*/

        /*.swal2-popup {
            background: linear-gradient(to bottom, #ffff00, #ffffff);
        }*/
    </style>
</head>

<body>
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <div class="container">
        <div class="login-container">
            <h2 class="login-title">登入系統</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })   @* !!! *@

                    @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <input type="submit" value="登入" class="btn btn-primary mb-2" />
                    @*<a class="float-right" href="/Employees/ForgetPassword/">忘記密碼?</a>*@
                </div>


                @*<div class="from-group">
                <div class="row forgot_password">
                    <div class="col-sm-12">
                        <a href="">忘記密碼?</a><a style="float:right;" href="">註冊新帳號</a>
                    </div>
                </div>
            </div>*@

                @*if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <script>
                    alert('@ViewBag.ErrorMessage');
                    </script>
                }*@

                <script>
                    $(function () {
                        $(document).ready(function () {
                            var errorMessage = '@ViewBag.ErrorMessage';
                            if (errorMessage) {
                                Swal.fire({
                                    icon: 'error',
                                    title: errorMessage,
                                    text: '請填寫正確的帳號及密碼',
                                    //background: 'linear-gradient(to bottom, #ffff00, #ffffff)'
                                });
                            }
                        });
                    });
                </script>
            }
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>